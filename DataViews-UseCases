    function DataViewsQueriesConstructor(){
        var queryDefinitions=[];
        queryDefinitions.push(JobDataViewQuery());
        queryDefinitions.push(SentDataViewQuery());
        queryDefinitions.push(OpenDataViewQuery());
        queryDefinitions.push(ClickDataViewQuery());
        queryDefinitions.push(BounceDataViewQuery());
        queryDefinitions.push(ComplaintDataViewQuery());
        queryDefinitions.push(UnsubscribeDataViewQuery());
        return queryDefinitions;
    }

    function RunQueries(api,queries){
        var props=[];

        for (var i = 0; i < queries.length; i++) {
            var request = api.retrieve("QueryDefinition", ["ObjectID"], 
            {
                Property: "CustomerKey",
                SimpleOperator: "equals",
                Value: queries[i].CustomerKey
            });
            var objectId = request.Results[0].ObjectID;
            var prop ={ "ObjectID": objectId };
            var result = api.performItem("QueryDefinition", prop, "Start", {});
        }
        return result;
    }
</script>
