<script runat="server">
Platform.Load("core", "1");

try {
    // Initialize the WSProxy object
    var api = new Script.Util.WSProxy();
        
    // Set the client ID (used for authentication)
    api.setClientId({
            ID: Platform.Function.AuthenticatedMemberID()
     });

    
    var deArray=DataViewsConstructor();

    // Create the Data Extensions in batch
    var result = api.createBatch("DataExtension", deArray);



    if(result.Status==='OK' && result.RequestID){
        var queries = DataViewsQueriesConstructor();
        var queryResult= api.createBatch("QueryDefinition", queries);

        if(queryResult.Status==='OK' && queryResult.RequestID){
            var qd=RunQueries(api,queries);
            Write (queryResult.Status); 
        }
        
    }

} catch (ex) {
    // Output any errors
    Write("Error message: " + ex.message + "<br>");
    Write("Description: " + ex.description + "<br>");
    Write("Jint Exception: " + ex.jintException + "<br>");
}

