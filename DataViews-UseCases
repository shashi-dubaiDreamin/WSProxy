    function DataViewsConstructor(){
        var deArray=[];
        var jobDataView={
            CustomerKey: "Job_DataView",
            Name: "Job_DataView",
            Fields: JobDataViewProperties()
        };
        deArray.push(jobDataView);

        var sentDataView={
            CustomerKey: "Sent_DataView",
            Name: "Sent_DataView",
            Fields: SentDataViewProperties()
        };
        deArray.push(sentDataView);

        var openDataView={
            CustomerKey: "Open_DataView",
            Name: "Open_DataView",
            Fields: OpenDataViewProperties()
        };
        deArray.push(openDataView);

        var clickDataView={
            CustomerKey: "Click_DataView",
            Name: "Click_DataView",
            Fields: ClickDataViewProperties()
        };
        deArray.push(clickDataView);

        var bounceDataView={
            CustomerKey: "Bounce_DataView",
            Name: "Bounce_DataView",
            Fields: BounceDataViewProperties()
        };
        deArray.push(bounceDataView);

        var complaintDataView={
            CustomerKey: "Complaint_DataView",
            Name: "Complaint_DataView",
            Fields: ComplaintDataViewProperties()
        };
        deArray.push(complaintDataView);

        var unsubscribeDataView={
            CustomerKey: "Unsubscribe_DataView",
            Name: "Unsubscribe_DataView",
            Fields: UnsubscribeDataViewProperties()
        };
        deArray.push(unsubscribeDataView);

        var subscribersDataView={
            CustomerKey: "Subscribers_DataView",
            Name: "Subscribers_DataView",
            Fields: SubscribersDataViewProperties()
        };
        deArray.push(subscribersDataView);

        var listSubscribersDataView={
            CustomerKey: "ListSubscribers_DataView",
            Name: "ListSubscribers_DataView",
            Fields: ListSubscribersDataViewProperties()
        };
        deArray.push(listSubscribersDataView);
        return deArray;
    }
    
    function JobDataViewQuery()
    {
        var queryDef = {
            Name : "jobdataviewQueryDefinition",
            CustomerKey : "jobdataviewQueryDefinition",
            TargetUpdateType : "Overwrite",
            TargetType : "DE",
            DataExtensionTarget : {
                Name : "Job_DataView",
                CustomerKey : "Job_DataView"
            },
            QueryText : "Select * from [_Job]"
        };
        return queryDef;
    }

    function SentDataViewQuery()
    {
        var queryDef = {
                Name : "sentdataviewQueryDefinition",
                CustomerKey : "sentdataviewQueryDefinition",
                TargetUpdateType : "Overwrite",
                TargetType : "DE",
                DataExtensionTarget : {
                    Name : "Sent_DataView",
                    CustomerKey : "Sent_DataView"
                },
